{
  "schemaVersion": 1,
  "id": "ancientcurse",
  "version": "${version}",
  
  "name": "Ancient Curse",
  "description": "Adds custom animated items and entities to Minecraft using GeckoLib",
  "authors": [
    "Your Name"
  ],
  "contact": {
    "homepage": "https://example.com/",
    "sources": "https://github.com/yourusername/ancientcurse"
  },
  
  "license": "MIT",
  "icon": "assets/ancientcurse/icon.png",
  
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.ancientcurse.AncientCurse"
    ],
    "client": [
      "com.ancientcurse.client.AncientCurseClient"
    ],
    "preLaunch": [
      "com.ancientcurse.core.AncientCursePrelaunch"
    ],
    "fabric-datagen": [
      "com.ancientcurse.data.ModDataGeneration"
    ]
  },
  "mixins": [
    "ancientcurse.mixins.json"
  ],
  
  "depends": {
    "fabricloader": ">=0.14.22",
    "fabric-api": ">=0.87.0",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "geckolib": ">=4.2.0"
  },
  "suggests": {
    "another-mod": "*"
  }
}